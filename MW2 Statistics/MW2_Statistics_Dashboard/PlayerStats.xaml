<UserControl x:Class="MW2_Statistics_Dashboard.PlayerStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MW2_Statistics_Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1000">
    <Grid>
        <ListBox x:Name="lboxPlayers" HorizontalAlignment="Left" Margin="10,39,0,10" Width="219" SelectionChanged="lboxPlayers_SelectionChanged"/>
        <TextBox x:Name="tboxPlayerName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" TextChanged="tboxPlayerName_TextChanged"/>
        <local:IndividualPlayerStats x:Name="induvidualPlayerView" Margin="234,11,10,10"/>
    </Grid>
</UserControl>
